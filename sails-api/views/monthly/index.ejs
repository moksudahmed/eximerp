<h1>monthly</h1>


<% if (result.length == 0) { %>
  <h4>
    0 monthly
  </h4>
<% } else { %>
<table>
	<thead>
    <th>#</th>
		<th>id</th>
			<th>basicSalary</th>
			<th>convince</th>
			<th>festivalBonus</th>
			<th>houseRent</th>
			<th>medicalAllowance</th>
			<th>otherAllowance</th>
			<th>increment</th>
			<th>monthlyID</th>

		<th>created at</th>
		<th>updated at</th>
		<th colspan="3"></th>
	</thead>

	<tbody>
		<% result.forEach((item, i) => { %>
			<tr>
				<td>
					<%= (i + 1) %>
				</td>
				<td>
					<%= item.id %>
				</td>
					<td>
						<%= item.basicSalary %>
					</td>
					<td>
						<%= item.convince %>
					</td>
					<td>
						<%= item.festivalBonus %>
					</td>
					<td>
						<%= item.houseRent %>
					</td>
					<td>
						<%= item.medicalAllowance %>
					</td>
					<td>
						<%= item.otherAllowance %>
					</td>
					<td>
						<%= item.increment %>
					</td>
					<td>
						<%= item.monthlyID %>
					</td>
				<td>
					<%= item.createdAt %>
				</td>
				<td>
					<%= item.updatedAt %>
				</td>
				<td>
					<a href="/monthly/show/<%= item.id %>">Show</a>
				</td>
				<td>
					<a href="/monthly/delete/<%= item.id %>">Delete</a>
				</td>
        <td>
					<a href="/monthly/edit/<%= item.id %>">Edit</a>
				</td>
			</tr>
			<% }) %>
	</tbody>
</table>

<% } %>

<br>
<a href="/monthly/create">New</a>