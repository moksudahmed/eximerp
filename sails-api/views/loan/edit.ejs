<div class="">
  <h1>New loan</h1>

  <div class="body">
    <form class="" action="/loan/update" method="post">
      <input name="id" value="<%= element.id %>" hidden="true" required>
        <div class="">
          <label for="">loanAmount</label>
          <input type="number" name="loanAmount" value="<%= element.loanAmount %>" required="true">
        </div>
        <div class="">
          <label for="">loanDate</label>
          <input type="date" name="loanDate" value="<%= element.loanDate %>" required="true">
        </div>
        <div class="">
          <label for="">payingDate</label>
          <input type="date" name="payingDate" value="<%= element.payingDate %>" required="true">
        </div>
        <div class="">
          <label for="">remarks</label>
          <input type="text" name="remarks" value="<%= element.remarks %>" required="true">
        </div>
        <div class="">
          <label for="">status</label>
          <input type="text" name="status" value="<%= element.status %>" required="true">
        </div>
        <div class="">
          <label for="">loanID</label>
          <input type="number" name="loanID" value="<%= element.loanID %>" required="false">
        </div>
        <div class="">
          <label for="">employeeID</label>
          <input type="number" name="employeeID" value="<%= element.employeeID %>" required="true">
        </div>
      <button type="submit">Update loan</button>
    </form>
    <br />
    <a href="/loan">Index</a>
  </div>
</div>