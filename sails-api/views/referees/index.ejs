<h1>referees</h1>


<% if (result.length == 0) { %>
  <h4>
    0 referees
  </h4>
<% } else { %>
<table>
	<thead>
    <th>#</th>
		<th>id</th>
			<th>title</th>
			<th>fullName</th>
			<th>position</th>
			<th>organization</th>
			<th>relation</th>
			<th>refereesID</th>
			<th>personID</th>

		<th>created at</th>
		<th>updated at</th>
		<th colspan="3"></th>
	</thead>

	<tbody>
		<% result.forEach((item, i) => { %>
			<tr>
				<td>
					<%= (i + 1) %>
				</td>
				<td>
					<%= item.id %>
				</td>
					<td>
						<%= item.title %>
					</td>
					<td>
						<%= item.fullName %>
					</td>
					<td>
						<%= item.position %>
					</td>
					<td>
						<%= item.organization %>
					</td>
					<td>
						<%= item.relation %>
					</td>
					<td>
						<%= item.refereesID %>
					</td>
					<td>
						<%= item.personID %>
					</td>
				<td>
					<%= item.createdAt %>
				</td>
				<td>
					<%= item.updatedAt %>
				</td>
				<td>
					<a href="/referees/show/<%= item.id %>">Show</a>
				</td>
				<td>
					<a href="/referees/delete/<%= item.id %>">Delete</a>
				</td>
        <td>
					<a href="/referees/edit/<%= item.id %>">Edit</a>
				</td>
			</tr>
			<% }) %>
	</tbody>
</table>

<% } %>

<br>
