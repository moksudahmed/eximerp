<h1>leave</h1>


<% if (result.length == 0) { %>
  <h4>
    0 leave
  </h4>
<% } else { %>
<table>
	<thead>
    <th>#</th>
		<th>id</th>
			<th>leaveDate</th>
			<th>leaveFrom</th>
			<th>leaveTo</th>
			<th>leaveType</th>
			<th>remarks</th>
			<th>totalDays</th>
			<th>leaveID</th>
			<th>employeeID</th>

		<th>created at</th>
		<th>updated at</th>
		<th colspan="3"></th>
	</thead>

	<tbody>
		<% result.forEach((item, i) => { %>
			<tr>
				<td>
					<%= (i + 1) %>
				</td>
				<td>
					<%= item.id %>
				</td>
					<td>
						<%= item.leaveDate %>
					</td>
					<td>
						<%= item.leaveFrom %>
					</td>
					<td>
						<%= item.leaveTo %>
					</td>
					<td>
						<%= item.leaveType %>
					</td>
					<td>
						<%= item.remarks %>
					</td>
					<td>
						<%= item.totalDays %>
					</td>
					<td>
						<%= item.leaveID %>
					</td>
					<td>
						<%= item.employeeID %>
					</td>
				<td>
					<%= item.createdAt %>
				</td>
				<td>
					<%= item.updatedAt %>
				</td>
				<td>
					<a href="/leave/show/<%= item.id %>">Show</a>
				</td>
				<td>
					<a href="/leave/delete/<%= item.id %>">Delete</a>
				</td>
        <td>
					<a href="/leave/edit/<%= item.id %>">Edit</a>
				</td>
			</tr>
			<% }) %>
	</tbody>
</table>

<% } %>

