<div class="">
  <h1>New leave</h1>

  <div class="body">
    <form class="" action="/leave/update" method="post">
      <input name="id" value="<%= element.id %>" hidden="true" required>
        <div class="">
          <label for="">leaveDate</label>
          <input type="date" name="leaveDate" value="<%= element.leaveDate %>" required="true">
        </div>
        <div class="">
          <label for="">leaveFrom</label>
          <input type="date" name="leaveFrom" value="<%= element.leaveFrom %>" required="true">
        </div>
        <div class="">
          <label for="">leaveTo</label>
          <input type="date" name="leaveTo" value="<%= element.leaveTo %>" required="true">
        </div>
        <div class="">
          <label for="">leaveType</label>
          <input type="text" name="leaveType" value="<%= element.leaveType %>" required="true">
        </div>
        <div class="">
          <label for="">remarks</label>
          <input type="text" name="remarks" value="<%= element.remarks %>" required="true">
        </div>
        <div class="">
          <label for="">totalDays</label>
          <input type="number" name="totalDays" value="<%= element.totalDays %>" required="true">
        </div>
        <div class="">
          <label for="">leaveID</label>
          <input type="number" name="leaveID" value="<%= element.leaveID %>" required="false">
        </div>
        <div class="">
          <label for="">employeeID</label>
          <input type="number" name="employeeID" value="<%= element.employeeID %>" required="true">
        </div>
      <button type="submit">Update leave</button>
    </form>
    <br />
    <a href="/leave">Index</a>
  </div>
</div>