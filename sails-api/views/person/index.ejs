<h1>person</h1>


<% if (result.length == 0) { %>
  <h4>
    0 person
  </h4>
<% } else { %>
<table>
	<thead>
    <th>#</th>
		<th>id</th>
			<th>title</th>
			<th>firstName</th>
			<th>lastName</th>
			<th>dateOfBirth</th>
			<th>gender</th>
			<th>emailAddress</th>
			<th>mobileNo</th>
			<th>maritalStatus</th>
			<th>personID</th>

		<th>created at</th>
		<th>updated at</th>
		<th colspan="3"></th>
	</thead>

	<tbody>
		<% result.forEach((item, i) => { %>
			<tr>
				<td>
					<%= (i + 1) %>
				</td>
				<td>
					<%= item.id %>
				</td>
					<td>
						<%= item.title %>
					</td>
					<td>
						<%= item.firstName %>
					</td>
					<td>
						<%= item.lastName %>
					</td>
					<td>
						<%= item.dateOfBirth %>
					</td>
					<td>
						<%= item.gender %>
					</td>
					<td>
						<%= item.emailAddress %>
					</td>
					<td>
						<%= item.mobileNo %>
					</td>
					<td>
						<%= item.maritalStatus %>
					</td>
					<td>
						<%= item.personID %>
					</td>
				<td>
					<%= item.createdAt %>
				</td>
				<td>
					<%= item.updatedAt %>
				</td>
				<td>
					<a href="/person/show/<%= item.id %>">Show</a>
				</td>
				<td>
					<a href="/person/delete/<%= item.id %>">Delete</a>
				</td>
        <td>
					<a href="/person/edit/<%= item.id %>">Edit</a>
				</td>
			</tr>
			<% }) %>
	</tbody>
</table>

<% } %>

